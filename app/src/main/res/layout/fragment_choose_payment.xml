<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/activityBackground"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/drawable_white_box_4_corner"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sans_pro_semi_bold"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:text="@string/wallet"
                android:textColor="@color/textColorDark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/amountPayableWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/sans_pro_semi_bold"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:padding="16dp"
                android:text="$34"
                android:textColor="@color/moneyColor"
                android:textSize="16dp" />
        </RelativeLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/lineGrey" />

        <TextView
            android:id="@+id/textViewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:drawablePadding="8dp"
            android:fontFamily="@font/sans_pro_semi_bold"
            android:padding="16dp"
            android:text="@string/bt_other_options"
            android:textColor="@color/textColorDark"
            android:textSize="16dp" />

        <!--<View-->
            <!--android:id="@+id/line5"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.7dp"-->
            <!--android:layout_marginEnd="16dp"-->
            <!--android:layout_marginStart="16dp"-->
            <!--android:background="@color/lineGrey" />-->

        <!--<TextView-->
                <!--android:id="@+id/textViewNetBanking"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:drawablePadding="8dp"-->
            <!--android:fontFamily="@font/sans_pro_semi_bold"-->
            <!--android:padding="16dp"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:textColor="@color/textColorDark"-->
            <!--android:textSize="16dp" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sans_pro_regular"
        android:layout_marginTop="24dp"
        android:text="Payment Options"
        android:textColor="@color/textColorLabelGrey"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sans_pro_regular"
        android:layout_marginTop="24dp"
        android:text=" Use Pass"
        android:textColor="@color/textColorLabelGrey"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/drawable_white_box_4_corner"
        android:elevation="1dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sans_pro_semi_bold"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:text="@string/amount_payable"
            android:textColor="@color/textColorDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewAmountPayable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:fontFamily="@font/sans_pro_semi_bold"
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:text="$0"
            android:textColor="@color/moneyColor"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/drawable_white_box_4_corner"
        android:elevation="1dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27">

        <TextView
            android:id="@+id/textViewAddPromoCode"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sans_pro_semi_bold"
            android:padding="16dp"
            android:text="Select a Pass"
            android:textColor="@color/textColorDark"
            android:textSize="16dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>